<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#000"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/normal"
    android:layout_marginBottom="@dimen/normal"
    app:cardCornerRadius="@dimen/normal"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/normal"
        android:paddingBottom="@dimen/normal"
        android:paddingLeft="@dimen/normal_textview"
        android:paddingRight="@dimen/normal_textview">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Apurv Todkar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorOrange"
            android:layout_height="match_parent"
            android:id="@+id/stud_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/stud_school"
            android:textStyle="bold"
            android:textColor="#fff"
            android:text="SCOPE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/normal"
        android:paddingLeft="@dimen/normal_textview"
        android:paddingRight="@dimen/normal_textview">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="16BCB0048"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#fff"
            android:layout_height="match_parent"
            android:id="@+id/stud_reg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/stud_cgpa"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="8.86"/>

    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>